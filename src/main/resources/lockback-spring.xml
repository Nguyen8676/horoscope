<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Enable Spring profile support -->
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="developer-horoscope"/>
    <springProperty name="activeProfile" source="spring.profiles.active" defaultValue="default" />
    <!-- Console output with colors -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %yellow(%date{yyyy-MM-dd HH:mm:ss}) |
                %highlight(%-5level) |
                %cyan(${appName}) |
                %magenta(%logger{36}) :
                %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Rolling file logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/${appName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/${appName}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                %date{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>